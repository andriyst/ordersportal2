@model List<OrdersPortal.Domain.Entities.Region>
@{
	ViewBag.Title = "Регіони";
	
}

<div>
	<h2>@ViewBag.Title</h2>
</div>


@Html.AntiForgeryToken()
<div>
	@Html.ActionLink("Додати регіон","Add", null,new { @class = "btn btn-success"})
</div>
<table class="table table-striped table-hover " data-toggle="table" data-search="true">
	<thead>
		<tr>
			<th>#</th>
			<th>Назва регіону</th>			
			<th>Дії</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var b in Model)
		{
			<tr>
				<td>@b.RegionId</td>
				<td>@b.RegionName</td>				
				<td>
					<p>
						@Html.ActionLink("Edit", "Edit", "Regions", new { regionId = b.RegionId },  new { title = "Управління" })
						@Html.ActionLink("Del", "Del", "Regions", new { regionId = b.RegionId, message = "" },  new { title = "Управління" })
					</p>
				</td>
			</tr>
		}
	</tbody>
</table>