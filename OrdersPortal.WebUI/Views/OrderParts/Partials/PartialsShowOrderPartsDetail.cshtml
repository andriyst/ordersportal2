@model OrdersPortal.Domain.Entities.Db1SOrderPartsNumbers
@{

	int orderPartsId = ViewBag.OrderPartsId;

}


<div class="modal" id="OrderPartsDetail">
	<div class="modal-dialog modal-dialog-centered-top modal-xl" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Деталі замовлення:</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
					<span aria-hidden="true"></span>
				</button>
			</div>
			<div class="modal-body">
