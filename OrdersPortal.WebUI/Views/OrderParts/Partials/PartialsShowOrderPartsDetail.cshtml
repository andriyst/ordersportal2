								<th>Файл</th>
							
								<th>Дата Створення</th>
								<th>Підтвердження</th>
								<th>Оплата</th>
								<th>Дата Оплати</th>
								@*<th>Дата Маршруту</th>*@
							</tr>
						</thead>
					
							@if (Model.OrderPartsId == Convert.ToInt32(orderPartsId))
							{
						<tr>
							<td>@Model.Db1SOrderPartsNumber</td>
							<td>@Model.Db1SOrderPartsStatus</td>
							<td>
								@if (Model.OrderImage != null)
								{
									@*@Html.Raw("<object style='width:80px; height:60px;' > <a target=\"blank\" alt=\"Відкрити в новому вікні\" href=\"data:application/pdf;base64,"
				+ Convert.ToBase64String(t.OrderImage) + "\">order.pdf</a> </object>")*@
									@*<a href="#" onclick="DownloadFile('@t.Db1SOrderNumber')">order.pdf</a>*@
									<a href="/OrderParts/DownloadOrderPartsFile?db1cOrderPartsNumber=@Model.Db1SOrderPartsNumber">add-order.pdf</a>
								}

								else
								{
									<TEXT>
									Немає
									</TEXT>
								}
							</td>						
							<td>@Model.Db1SOrderPartsDateCreate.ToString("dd.MM.yy HH:mm")</td>
							<td>
								@if (Model.Db1SOrderPartsConfirm == true)
								{<img src="/Images/YES.png">}

								else if (Model.Db1SOrderPartsConfirm != true && User.IsInRole("customer") && Model.Db1SOrderPartsStatus != "Відмова" && Model.Db1SOrderPartsStatus != "Відмова до запуску в роботу (не оплачено)" && Model.Db1SOrderPartsStatus != "Відмова до запуску в роботу (не підтверджено)" && Model.Db1SOrderPartsStatus != "Відмова до запуску в роботу (не підтверджено)")
								{
									@Html.ActionLink("Підтвердити", "ConfirmOrder", "OrderParts", new { Db1cOrderPartId = Model.Db1SOrderPartsNumberId }, htmlAttributes: new { @class = "btn btn-success" })
								}
								else
								{
									<img src="/Images/NO.png">
								}
							</td>
							<td class="image-center">
								@if (Model.Db1SOrderPartsPayed == true)
								{<img src="/Images/YES.png">}
								else
								{<img src="/Images/NO.png">}
							</td>
							<td>@(Model.Db1SOrderPartsDatePayed.HasValue ? Model.Db1SOrderPartsDatePayed.Value.ToString("dd.MM.yy HH:mm") : "")</td>
							@*<td>@(Model.Db1SOrderPartsDateDeliver.HasValue ? Model.Db1SOrderPartsDateDeliver.Value.ToString("dd.MM.yy HH:mm") : "")</td>*@
						</tr>
							}
						
					</table>
				</div>
			</div>
			<div class="modal-footer">

				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрити</button>
			</div>
		</div>
	</div>
</div>


<script>
	var $table = $('#table-detailed');

	$(function() {
		$table.bootstrapTable();

	});

