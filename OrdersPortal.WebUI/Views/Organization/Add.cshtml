@model OrdersPortal.Application.Models.ViewModels.OrganizationAddViewModel
@{
	ViewBag.Title = "Додати організацію";
}

<h2>@ViewBag.Title</h2>

<div class="row">
	<div class="col-12 col-md-9 col-lg-6 col-xl-4">

		@using (Html.BeginForm("Add", "Organization", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
		{
			@Html.AntiForgeryToken()

			<hr />
			@Html.ValidationSummary()
			<div class="form-group">
				@Html.LabelFor(m => m.OrganizationName, new { @class = "col-2 control-label" })
				<div class="col-12">
					@Html.TextBoxFor(m => m.OrganizationName, new { @class = "form-control" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Organization1cId, new { @class = "col-8 control-label" })
				<div class="col-12">
					@Html.DropDownListFor(m => m.Organization1cId, Model.Organization1cList.Select(x => new SelectListItem
					{
						Text = x.Name,
						Value = x.Code.ToString()
					}), new { @class = "form-select", @id = "select-managerguid" })
				</div>
			</div>
			<div class="row justify-content-between pt-4">

				<div class="col-6">
					<input id="addButton" type="submit" class="btn btn-success" value="Додати" />
				</div>

				<div class="col-6">
					<input id="cancelButton" type="button" class="btn btn-secondary float-right" onclick="CancelButtonClick()" value="Відмінити" />
				</div>

			</div>

		}
	</div>
</div>
<script>
	function CancelButtonClick() {

		location.href = "/Organization/List";
	}
</script>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
