@model OrdersPortal.Domain.Entities.VideoContent
@{
	ViewBag.Title = "Редагування Відео";
}

<h2>@ViewBag.Title.</h2>

<div class="row">
	<div class="col-12 col-md-9 col-lg-6 col-xl-4">

		@using (Html.BeginForm("Edit", "Video", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
		{
			@Html.AntiForgeryToken()

			<hr />
			@Html.ValidationSummary()
			@Html.HiddenFor(m => m.Url)
			<div class="form-group">
				<div class="col-12">Посилання YouTube</div>
				<div class="col-12">

					@Html.TextBoxFor(m => m.Url, new { @class = "form-control" })
				</div>
			</div>

			<div class="form-group pt-4">
				<div class="col-12">Заголовок для відео</div>
				<div class="col-12">

					@Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
				</div>
			</div>

	
			<div class="row justify-content-between pt-4">

				<div class="col-6">
					<input id="addButton" type="submit" class="btn btn-success" value="Змінити" />
				</div>

				<div class="col-6">
					<input id="cancelButton" type="button" class="btn btn-secondary float-right" onclick="CancelButtonClick()" value="Відмінити" />
				</div>

			</div>

		}

	</div>
</div>
<script>
	function CancelButtonClick() {

		location.href = "/Video/List";
	}
</script>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}

