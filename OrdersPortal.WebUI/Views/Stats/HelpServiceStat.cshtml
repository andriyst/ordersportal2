@model OrdersPortal.Application.Models.ViewModels.HelpServiceStatsViewModel
@{
    int countLogs = Model.HelpServiceLogs.Count;
     
}
<div>
    @using (Html.BeginForm("HelpServiceStat", "Stats", FormMethod.Get))
    {
    <fieldset>
        <div id="formcontainer">
            <div class="btn-group btn-group-justified">

                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.StartDate, new { @class = "btn btn-default", id = "startDateHs", Name = "startDateHs" })
                    @Html.TextBoxFor(m => m.EndDate, new { @class = "btn btn-default", id = "endDateHs", Name = "endDateHs" })
                    <div style="margin-left: 30px; display: inline;">
                        <button type="submit" class="btn btn-success">Оновити</button>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    }

    <div style="display: inline-block;">
        <h2>Всього за період з @Model.StartDate.ToShortDateString() по @Model.EndDate.ToShortDateString(): @countLogs дзвінків</h2>
    </div>
    <table class="table table-striped table-hover" data-toggle="table" data-search="true">
        <thead>
        <tr>

            <th data-sortable="true">Дата</th>
            <th data-sortable="true">Дилер</th>
            <th data-sortable="true">Звязок через</th>
            <th data-sortable="true">Відділ</th>
            <th data-sortable="true">Керівник</th>
        </tr>
        </thead>

        <tbody>

        @foreach (var log in Model.HelpServiceLogs)
        {

            <tr>
                <td>@log.CreateDate.ToString("G") </td>
                <td>@log.OrderPortalUser.FullName</td>
                <td>@log.HelpServiceCall </td>
                <td>@log.HelpServiceContact.HelpServiceType </td>
                <td>@log.HelpServiceContact.ContactName</td>

            </tr>
        }
        </tbody>
    </table>


</div>
<script type="text/javascript">
    // When the document is ready
    $(document).ready(function () {


    
        $('#startDateHs').datepicker({

            format: "dd.mm.yyyy"
        });
        $('#endDateHs').datepicker({
            format: "dd.mm.yyyy"
        });
        $('#startDateHs').val("@Model.StartDate.ToShortDateString()");
        $('#endDateHs').val("@Model.EndDate.ToShortDateString()");


    });
</script>