</head>
<body class="d-flex flex-column min-vh-100">
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="flex-wrap: wrap">
		<div id="nav-container1" class="container-fluid col-xxl-10 col-12">
			<a href="/"><img src="/Images/vikna_logo_white2.png" height="54px" class="p-1"></img></a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse justify-content-between" id="navbarColor01">
				<div class="navbar-nav col-6 col-md-9 justify-content-start">
					@if (Request.IsAuthenticated)
					{
						@*<li class="nav-item col-6 col-md-auto text-white bg-wdsrating-action bg-wdsrating-action:hover">
								<a class="nav-link" href="/Finance/GetWdsActionRating" id="WdsRatingActionMenu">
									<div class="d-none d-sm-inline d-md-inline  d-lg-none d-xl-inline"><i class="fas fa-list-ol fa-lg"></i></div>
									Бонус дня
									<span class="sr-only"></span>
								</a>
							</li>*@
						<li class="nav-item col-6 col-md-auto text-white bg-wds-action bg-wds-action:hover">
							<a class="nav-link" href="/Finance/GetWdsActionCodes" id="WdsActionMenu">
								<div class="d-none d-sm-inline d-md-inline  d-lg-none d-xl-inline"><i class="fas fa-gift fa-lg"></i></div>
								Акція WDS
								<span class="sr-only"></span>
							</a>
						</li>

						<li class="nav-item col-6 col-md-auto">
							<a class="nav-link" href="/Orders/List" id="OrdersListMenu">
								<div class="d-none d-sm-inline d-md-inline  d-lg-none d-xl-inline"><i class="fas fa-shopping-basket fa-lg text-success"></i></div>
								Замовлення
								<span class="sr-only"></span>
							</a>
						</li>
						<li class="nav-item col-6 col-md-auto">
							<a class="nav-link" href="/Complaints/List" id="ComplaintsListMenu">
								<div class="d-none d-sm-inline d-md-inline  d-lg-none d-xl-inline"><i class="fas fa-tools fa-lg text-warning"></i></div>
								Рекламації
								<span class="sr-only"></span>
							</a>
						</li>
						<li class="nav-item col-6 col-md-auto">
							<a class="nav-link" href="/OrderParts/List" id="OrderPartsListMenu">
								<div class="d-none d-sm-inline d-md-inline  d-lg-none d-xl-inline"><i class="fas fa-cart-plus fa-lg text-success"></i></div>
								Дозамовлення
								<span class="sr-only"></span>
							</a>
						</li>
						<li class="nav-item col-6 col-md-auto">
							<a class="nav-link" href="/Finance/List" id="StatusOrdersListMenu">
								<div class="d-none d-sm-inline d-md-inline  d-lg-none d-xl-inline"><i class="fas fa-clipboard-list fa-lg icon-yellow"></i></div>

								Статус
								<span class="sr-only"></span>
							</a>
						</li>

						<li class="nav-item col-6 col-md-auto">
							<a class="nav-link" href="/Files/List" id="FilesListMenu">
								<div class="d-none d-sm-inline d-md-inline  d-lg-none d-xl-inline"><i class="fas fa-cloud-download-alt fa-lg icon-cyan"></i></div>
								Файли
								<span class="sr-only"></span>
							</a>
						</li>
						<li class="nav-item col-6 col-md-auto">
							<a class="nav-link" href="/Video/List" id="VideoListMenu">
								<div class="d-none d-sm-inline d-md-inline  d-lg-none d-xl-inline"><i class="fab fa-youtube fa-lg icon-purple"></i></div>
								Відео
								<span class="sr-only"></span>
							</a>
						</li>

						if (User.IsInRole("customer") || User.IsInRole("regionmanager"))
						{
							<li class="nav-item dropdown  col-3 col-md-auto">
								<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" style="color: pink" aria-expanded="false">
									<div class="d-none d-sm-inline d-md-inline  d-lg-none d-xl-inline"><i class="fas fa-phone-square-alt fa-lg icon-pink"></i></div>
									Виклик
								</a>
								<div class="dropdown-menu">
									<div class="dropdown-divider"></div>
									@Html.ActionLink("Керівник відділу продажів", "CallManager", "HelpService", routeValues: new { @helpServiceType = HelpServiceTypesEnum.Sales }, htmlAttributes: new { @class = "dropdown-item", id = "CallSalesManagerLink" })
									<div class="dropdown-divider"></div>
									@Html.ActionLink("Керівник сервісного відділу", "CallManager", "HelpService", routeValues: new { @helpServiceType = HelpServiceTypesEnum.Service }, htmlAttributes: new { @class = "dropdown-item", id = "CallServiceManagerLink" })
									<div class="dropdown-divider"></div>
									@Html.ActionLink("Керівник відділу логістики", "CallManager", "HelpService", routeValues: new { @helpServiceType = HelpServiceTypesEnum.Logistic }, htmlAttributes: new { @class = "dropdown-item", id = "CallLogisticManagerLink" })
								</div>
							</li>
						}
						if (User.IsInRole("director") || User.IsInRole("admin"))
						{
							<li class="nav-item dropdown  col-3 col-md-auto">
								<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
									<div class="d-none d-sm-inline d-md-inline  d-lg-none d-xl-inline"><i class="fas fa-chart-bar fa-lg icon-red"></i></div>
									Статистика
								</a>
								<div class="dropdown-menu">
									@Html.ActionLink("S.O.S.", "HelpServiceStat", "Stats", null, new { @class = "dropdown-item", id = "HelpServiceStatLink" })
									@Html.ActionLink("Відео", "List", "Video", null, new { @class = "dropdown-item", id = "VideoContentLink" })
								</div>
							</li>
						}
						Html.RenderAction("ShowFinanceMenu", "Account");


					}
				</div>
				<div class="navbar-nav col-6 col-md-3 justify-content-end">
					@Html.Partial("_LoginPartial")
				</div>

			</div>
		</div>
	</nav>


	<div class="container-fluid body-content col-12 col-xxl-9 col-xl-10 pt-3">
		@RenderBody()

	</div>

	<footer class="mt-auto">
		@*<div>
				@if (Request.IsAuthenticated)
				{
					Html.RenderAction("ShowUserManagers", "Account");
				}
			</div>*@

		<hr />
		<div class="text-center">
			<p>&copy; 2015-@DateTime.Now.Year Вікна Стиль</p>
		</div>
	</footer>

	<script>

		var $element = $("#nav-container1")[0];

		var lastHeight = $("#nav-container1")[0].offsetHeight;

		function checkForChanges() {
			if ($("#nav-container1")[0].offsetHeight > 60) {
				$("#nav-container1").removeClass("col-xxl-10");
			}
		}

		window.addEventListener("DOMContentLoaded", e => {
			checkForChanges();
		});

		window.addEventListener("resize", e => {
			checkForChanges();
		});
	</script>
</body>
</html>


